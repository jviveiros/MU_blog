<div class="jumbotron">
  <h1>Hi, <%=@user.username%><h1>
</div>
</br>
</br>
<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Your Articles:</h3>
    </div>
    <div class="panel-body">
      <ul>
        <%@articles.each do |article|%>
          <li><%=link_to article.title, article_path(article)%></li>
        <%end%>
      </ul>
    </div>
  </div>
</div>
</br>
<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Your Comments:</h3>
    </div>
    <div class="panel-body">
      <ul>
        <%@comments.each do |comment|%>
          <li><%=link_to comment.body, article_path(comment.article)%></li>
        <%end%>
      </ul>
    </div>
  </div>
</div>
</br>
</br>
</br>
<div class="col-md-6 col-md-offset-3">
  <%if current_user = @user%>
    <h4><%=link_to "Delete Account", user_path(@user), method: :delete, class: "btn btn-danger actdelete"%>
  <%end%>
</div>

