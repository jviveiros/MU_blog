<%= @comment.errors.full_messages.first if @comment.errors.any? %></br></br>


<%=form_for [@article, @comment], class:"form-horizontal" do |f|%>
  <fieldset>
    <legend>Comment</legend>
    <div class="form-group">
      <%=f.label :body, class:"col-lg-2 control-label"%>
      <div class="col-lg-8">
        <%=f.text_area :body, class:"form-control", id:"inputText"%></br>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
      <%=f.submit "Add Comment", class:"btn btn-primary"%>
      </div>
    </div>
  </fieldset>
<%end%>
