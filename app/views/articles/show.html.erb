
<div class="jumbotron">
  <h1><%=@article.title%></h1></br></br>
  <p><%=@article.body%></p></br>
  <cite><%=@article.user.username%></cite></br></br>

  <%if current_user == @article.user%>
    <%=link_to "Edit", edit_article_path(@article), class:"btn btn-warning btn-sm"%></br></br>
    <%=link_to "Delete", article_path(@article), method: :delete, class:"btn btn-danger btn-sm"%>
  <%end%>
</div>
<div class="commentform">

</div>
<div class="row">
  <div class="col-md-2 col-md-offset-5 comment">
    <%= link_to "Add Comment", new_article_comment_path(@article), remote: true, class:"btn btn-default"%>
  </div>
</div>
</br>
<div class = "comments">
    <% @comments.each do |comment|%>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
        <div class="well well-lg">
        <p><%=comment.body%></p>
          <cite>-<%=comment.user.username%></cite></br></br>
        <% if current_user == comment.user%>
          <%= link_to "Edit", edit_article_comment_path(comment.article, comment), class:"btn btn-warning btn-xs edit"%>
          <%= link_to 'Delete', [comment.article, comment], method: :delete, class:"btn btn-danger btn-xs delete" %>
          <%end%>
        </div>
        </div>
      </div>
      </br>
      </br>
    <%end%>
  </div>
