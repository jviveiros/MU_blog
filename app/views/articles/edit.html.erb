<%= @article.errors.full_messages.first if @article.errors.any? %></br></br>


<%= form_for @article, class:"form-horizontal" do |f|%>
  <fieldset>
    <legend>Edit Article</legend>
      <div class="form-group">
        <%=f.label :title, class:"col-lg-2 control-label"%>
        <div class="col-lg-9">
          <%=f.text_field :title, value: @article.title, class:"form-control"%></br>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :body, class:"col-lg-2 control-label"%>
        <div class="col-lg-9">
          <%= f.text_area :body, value: @article.body, class:"form-control"%></br>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit "Update Article", class:"btn btn-primary"%>
        </div>
      </div>
  </fieldset>
<%end%>
