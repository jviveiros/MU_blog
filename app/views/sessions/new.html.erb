
<%=form_tag sessions_path, method: :post, class:"form-horizontal" do%>
  <fieldset>
    <legend>Login</login>
    <div class="form-group">
      <%=label_tag :email, nil, class:"col-lg-2 control-label"%>
      <div class="col-lg-8">
        <%=text_field_tag :email, nil, class: "form-control", id:"inputEmail"%>
      </div>
    </div>
    <div class="form-group">
      <%=label_tag :password, nil, class:"col-lg-2 control-label"%>
      <div class="col-lg-8">
        <%=password_field_tag :password, nil, class:"form-control", id:"inputPassword"%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-8 col-lg-offset-2">
        <%=submit_tag "Login", class:"btn btn-primary"%>
      </div>
    </div>
  </fieldset>
<%end%>
